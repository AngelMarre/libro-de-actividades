
<div id="nav_int">

<% a = controller.action_name %>

<p>
<% if (a=="index") then %>
<% elsif (a=="list") then %>
	<%= link_to 'Nueva unidad', url_for(:action => 'new', :id => @asignatura.id) %> |
	<%= link_to 'Ir a '+@asignatura.codigo, url_for(:controller=>'asignaturas',:action => 'show', :id => @asignatura.id) %>	
