   <%= link_to 'Mostrar', unidad_path(@unidad) %> |
    Editar |
	<%= link_to 'Borrar', @unidad, :confirm => '¿Desea eliminar el registro?', :method => :delete %> | 
	<%= link_to 'Tareas('+@unidad.tareas.size.to_s+')', url_for(:controller => 'tareas', :action => 'list', :id => @unidad.id ) %>
<% end %>
</p>
</div>
