
<div id="nav_int">

<% p = @nav %>
<% a = controller.action_name %>

<p>
<% if (a=="index") then %>
  <%= link_to 'Nueva unidad', new_unidad_path %>
<% elsif (a=="new" && p==:unidades) then %>
  <%= link_to 'Ver todas', unidades_path %>
<% elsif (a=="new" && p.class.to_s=="Programacion") then %>
  <%= link_to 'Listar', url_for(:action => 'list', :id => p.id) %>
<% elsif (a=="list" && p.class.to_s=="Programacion") then %>
  <%= link_to 'Nueva unidad', url_for(:action => 'new', :id => p.id) %>
<% elsif (p.class.to_s=="Unidad") then %>
  <% if a=="show" then %>
    Mostrar |
  <% else %>
    <%= link_to 'Mostrar', unidad_path(@unidad) %> |
  <% end %>
  <% if a=="edit" then %>
    Editar |
  <% else %>
    <%= link_to 'Editar', edit_unidad_path(@unidad) %> |
  <% end %>
  <%= link_to 'Borrar', @unidad, :confirm => 'Â¿Desea eliminar el registro?', :method => :delete %> |
  <%= link_to 'Listar', url_for(:action => 'list', :id => @unidad.programacion_id) %>
<% end %>
</p>
</div>
