<h1>Editar horario</h1>

<% form_for(@horario) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td><label for="programa_id">Programación</label></td><td><%= collection_select 'horario', :programa_id, @programaciones, :id, :ref%></td>
    </tr>
    <tr>
      <td><label for="dia_semana">Día de la Semana</label></td><td><%= text_field 'horario', :dia_semana %></td>
    </tr>
    <tr>
      <td><label for="num_hora">Número de la hora</label></td><td><%= text_field 'horario', :num_hora %></td>
    </tr>
    <tr>
      <td></td><td><%= f.submit "Modificar" %></td>
    </tr>
  </table>
<% end %>

</br/>
<%= link_to 'Mostrar', @horario %> |
<%= link_to 'Ver todos', horarios_path %>
