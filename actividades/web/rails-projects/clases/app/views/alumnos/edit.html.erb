<h1>Editar alumno "<%= @alumno.nombre_completo %>"</h1>

<% form_for(@alumno) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td><label for="expediente">Expediente</label></td><td><%= text_field 'alumno', :expediente %></td>
    </tr>
    <tr>
      <td><label for="dni">DNI</label></td><td><%= text_field 'alumno', :dni %></td>
    </tr>
    <tr>
      <td><label for="apellidos">Apellidos</label></td><td><%= text_field 'alumno', :apellidos %></td>
    </tr>
    <tr>
      <td><label for="nombre">Nombre</label></td><td><%= text_field 'alumno', :nombre %></td>
    </tr>
    <tr>
      <td><label for="fecha_nac">Fecha de nacimiento</label></td><td><%= date_select 'alumno', :fecha_nac, :start_year => 1969 %></td>
    </tr>
    <tr>
      <td><label for="esmujer">Mujer=S, Hombre=N</label></td><td><%= check_box 'alumno', :esmujer %></td>
    </tr>
    <tr>
      <td><label for="tlf_fijo">Teléfono fijo</label></td><td><%= text_field 'alumno', :tlf_fijo %></td>
    </tr>
    <tr>
      <td><label for="tlf_movil">Teléfono móvil</label></td><td><%= text_field 'alumno', :tlf_movil %></td>
    </tr>
    <tr>
      <td><label for="email">Email</label></td><td><%= text_field 'alumno', :email %></td>
    </tr>
    <tr>
      <td><label for="municipio_id">Municipio</label></td><td><%= collection_select 'alumno', :municipio_id, @municipios, :id, :nombre%></td>
    </tr>
    <tr>
      <td><label for="localidad">Localidad</label></td><td><%= text_field 'alumno', :localidad %></td>
    </tr>
    <tr>
      <td><label for="calle">Calle</label></td><td><%= text_field 'alumno', :calle %></td>
    </tr>
    <tr>
      <td><label for="cod_postal">Código Postal</label></td><td><%= text_field 'alumno', :cod_postal %></td>
    </tr>
    <tr>
      <td><label for="latitud">Latitud</label></td><td><%= text_field 'alumno', :latitud %></td>
    </tr>
    <tr>
      <td><label for="longitud">Longitud</label></td><td><%= text_field 'alumno', :longitud %></td>
    </tr>
    <tr>
      <td><label for="observaciones">Observaciones</label></td><td><%= text_field 'alumno', :observaciones %></td>
    </tr>

    <tr>
      <td></td><td><%= f.submit "Modificar" %></td>
    </tr>
  </table>
<% end %>

<br/>
<%= link_to 'Mostrar', @alumno %> |
<%= link_to 'Ver todos', alumnos_path %>
