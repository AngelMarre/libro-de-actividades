<h1>Nuevo curso</h1>

<p>
<% if @centros.count==1 then %>
  <%= link_to 'Listar', url_for(:action => 'list', :id => @centros[0].id) %>
<% else %>
  <%= link_to 'Ver todos', cursos_path %>
<% end %>
</p>

<div id="dat">
<% form_for(@curso) do |f| %>
  <%= f.error_messages %>
 <table>
    <tr>
      <td><label for="centro_id">Centro</label></td><td><%= collection_select 'curso', :centro_id, @centros, :id, :codigo %></td>
    </tr>
    <tr>
      <td><label for="codigo">Código</label></td><td><%= text_field 'curso', 'codigo' %></td>
    </tr>
    <tr>
      <td><label for="inicio_clases">Fecha de inicio de las clases</label></td><td><%= date_select 'curso', 'inicio_clases' %></td>
    </tr>
    <tr>
      <td><label for="fin_eval1">Fin de la 1ª evaluación</label></td><td><%= date_select 'curso', 'fin_eval1' %></td>
    </tr>
    <tr>
      <td><label for="fin_eval2">Fin de la 2ª evaluación</label></td><td><%= date_select 'curso', 'fin_eval2' %></td>
    </tr>
    <tr>
      <td><label for="fin_eval3">Fin de la 3ª evaluación</label></td><td><%= date_select 'curso', 'fin_eval3' %></td>
    </tr>

    <tr>
      <td></td><td><%= f.submit "Crear" %></td>
    </tr>
  </table>
<% end %>
</div>
