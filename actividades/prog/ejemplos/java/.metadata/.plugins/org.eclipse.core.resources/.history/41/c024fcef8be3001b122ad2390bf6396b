#
#Definiciones de funciones
#
def mostrar_titulo(titulo,i=50)
  i.times do print "*" end
  puts
  puts titulo.center(i)
  i.times do print "*" end
  puts
end

def leer_diccionario
  palabras = []
  f = File.new($FILE_DICCIONARIO)
  f.each_line do |linea|
    palabras << linea unless linea.rstrip.rindex('#')==0
  end
  return palabras
end

def elegir_palabra_al_azar(palabras)
   i = rand(palabras.length)
   palabras[i].split(':')
end
